{% block box_img %}
  {% for box in img %}
    <div class="box-img {{ box.class }}">
      {% if box.link_img is not empty %}<div class="box-img__image"><div class="field-img"><img src="{{ box.link_img }}" typeof="foaf:Image"></div></div>{% endif %}
      {% if box.title is not empty %}<h3 class="box-img__title">{{ box.title }}</h3>{% endif %}
      {% if box.content is not empty %}<div class="box-img__content">{{ box.content }}</div>{% endif %}
      {% if box.link is not empty %}<a href="{{ box.link }}" class="box-hero__link">Browse</a>{% endif %}
    </div>
  {% endfor %}
{% endblock %}
